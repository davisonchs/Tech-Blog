<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
  <div class="text-center">
    <h1 class="display-4 text-primary mb-4">Login</h1>
    <div class="card p-4 shadow-lg rounded-lg">
      <div class="card-body">
        <div class="mb-3">
          <label for="email" class="form-label">Email address:</label>
          <input type="email" class="form-control shadow-sm rounded" id="email" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password:</label>
          <input type="password" class="form-control shadow-sm rounded" id="password">
        </div>
        <button type="button" class="btn btn-success btn-lg w-100" id="loginBtn">Login</button>
      </div>
    </div>
    <div class="mt-3">
      <a class="text-muted" href="/signup">Don't have an account? Sign Up</a>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>
