<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
  <div class="text-center">
    <h1 class="display-4 text-primary mb-4">Sign Up</h1>
    <div class="card p-4 shadow-lg rounded-lg">
      <div class="card-body">
        <form class="signup-form">
          <div class="mb-4">
            <label for="username" class="form-label">Username:</label>
            <input type="text" class="form-control shadow-sm rounded" id="username" autocomplete="off">
          </div>
          <div class="mb-4">
            <label for="signUpEmail" class="form-label">Email address:</label>
            <input type="email" class="form-control shadow-sm rounded" id="signUpEmail" autocomplete="off">
            <div id="emailHelp" class="form-text text-muted mt-2">We'll never share your email with anyone else.</div>
          </div>
          <div class="mb-4">
            <label for="signUpPassword" class="form-label">Password:</label>
            <input type="password" class="form-control shadow-sm rounded" id="signUpPassword" autocomplete="off">
          </div>
          <button type="button" class="btn btn-success btn-lg w-100" id="submitBtn">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="./js/signup.js"></script>
