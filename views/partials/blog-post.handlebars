{{#each blogPosts as |blogPost|}}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-0 shadow-sm rounded-lg">
        <div class="card-header hbar bg-gradient-primary text-white d-flex justify-content-between align-items-center">
          <span><strong>Author:</strong> {{user.username}}</span>
          <span class="badge bg-light text-dark">{{format_date createdAt}}</span>
        </div>
        <div class="card-body bg-light">
          <h4 class="card-title font-weight-bold text-dark mb-3" id="title">{{title}}</h4>
          <p class="card-text text-muted" id="content">{{content}}</p>
          <div class="mt-4">
            <h5 class="card-text text-secondary" id="comHeader">Comments:</h5>
            <ul class="list-unstyled">
              {{#each comments as |comment|}}
              <li class="py-2 border-bottom">
                <span class="text-dark">{{comment.content}}</span> 
                <small class="text-muted">by <i>{{user.username}}</i> on <i>{{format_date comment.createdAt}}</i></small>
              </li>
              {{/each}}
            </ul>
          </div>
          {{#if user.id}}
          <a href="/api/users/{{id}}" class="btn btn-outline-primary mt-3">Update</a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{> comment id=blogPost.id}}
{{/each}}
